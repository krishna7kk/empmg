# Employee Management System - Production Environment Configuration

# API Configuration (Update these for your production backend)
VITE_API_BASE_URL=https://your-backend-domain.com
VITE_API_TIMEOUT=15000

# Backend Endpoints
VITE_BACKEND_URL=https://your-backend-domain.com
VITE_API_EMPLOYEES_ENDPOINT=/api/employees
VITE_API_DEMO_ENDPOINT=/api/demo

# Application Configuration
VITE_APP_NAME=Employee Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Full-stack Employee Management System

# Production Configuration
VITE_DEV_MODE=false
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=false

# Build Configuration
VITE_BUILD_TARGET=es2020
VITE_ENABLE_SOURCE_MAPS=false

# Feature Flags
VITE_ENABLE_DEMO_DATA=false
VITE_ENABLE_STATISTICS=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_EXPORT=true

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_THEME=light

# Security Configuration
VITE_ENABLE_CORS=false
VITE_CSRF_PROTECTION=true

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_CACHE_DURATION=600000

# Error Handling
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ERROR_REPORTING=true
