# Employee Management System - Frontend Environment Template
# Copy this file to .env and update the values for your environment

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# Backend Endpoints
VITE_BACKEND_URL=http://localhost:8080
VITE_API_EMPLOYEES_ENDPOINT=/api/employees
VITE_API_DEMO_ENDPOINT=/api/demo

# Application Configuration
VITE_APP_NAME=Employee Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Full-stack Employee Management System

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=true

# Build Configuration
VITE_BUILD_TARGET=es2020
VITE_ENABLE_SOURCE_MAPS=false

# Feature Flags
VITE_ENABLE_DEMO_DATA=true
VITE_ENABLE_STATISTICS=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_EXPORT=false

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_THEME=light

# Security Configuration
VITE_ENABLE_CORS=true
VITE_CSRF_PROTECTION=false

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_CACHE_DURATION=300000

# Error Handling
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ERROR_REPORTING=false
